resource maximum:int

def take_max(i:int) use !maximum { ?maximum = max(i, maximum) }

?matrix = [[1,2,3], [5,1]]

use maximum in {
    ?maximum = -1000
    !map({resource}{
        !take_max(length(@))
    }, matrix)
    !println(maximum)
}

!println("*****")

?matrix = [[1,2,3], [1,2,1,2], [5,1]]

use maximum in {
    ?maximum = -1000
    !map({resource}{
        use maximum in {
            ?maximum = -1000
            !map(take_max, @1)
            !print("> "); !println(maximum)
        }
        !take_max(length(@1))
    }, matrix)
    !println(maximum)
}

def my_map(p:{resource}(T), lst:list(T)) {
    for ?e in lst { !p(e) }
}

def ignore(x:T) { pass }

use maximum in {
    ?maximum = 0
    !my_map(take_max, [1,3,5,3,1])
    !println(maximum)
}

!my_map(ignore, [1,3,5,3,1])
