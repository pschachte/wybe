pub def yorn(prompt:raw_string, ?result:bool) use !io {
    do {! print(prompt:raw_string) # XXX shouldn't be necessary to qualify prompt
        ! print(" (y/n) ")
        ! read(?response)
          ?result = response = 'Y'
          until result || response = 'N'
        ! println("Please answer 'yes' or 'no'.")
    }
}
