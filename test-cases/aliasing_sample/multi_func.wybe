use position

public proc replicate2(p1:position, ?p2:position) use !io
    ?pp = position(0,0)
    !print("some noise...")
    !println(pp.x)

    ?p2 = p1
end

public proc replicate1(pa:position, ?pb:position, ?pc:position) use !io
    !replicate2(pa, ?pb)
    !replicate2(pb, ?pc)
    x(pb, ?pb1, 20)
end


?pa = position(1, 1)
